{
  "name": "@iamnnort/config",
  "version": "1.0.0",
  "description": "Shared presets for ESLint, Prettier, lint-staged, esbuild, tsup, and TypeScript â€” use in Node.js projects for consistent tooling without duplicating config.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamnnort/config.git"
  },
  "bugs": "https://github.com/iamnnort/config/issues",
  "homepage": "https://github.com/iamnnort/config#readme",
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "lint-staged",
    "esbuild",
    "tsup",
    "typescript",
    "tsconfig"
  ],
  "files": [
    "dist",
    "tsconfig"
  ],
  "exports": {
    "./esbuild": "./dist/esbuild/index.js",
    "./eslint": "./dist/eslint/index.js",
    "./jest": "./dist/jest/index.js",
    "./lint-staged": "./dist/lint-staged/index.js",
    "./prettier": "./dist/prettier/index.js",
    "./tsup": "./dist/tsup/index.js",
    "./tsconfig/node.json": {
      "default": "./tsconfig/node.json"
    },
    "./tsconfig/nest.json": {
      "default": "./tsconfig/nest.json"
    },
    "./tsconfig/browser.json": {
      "default": "./tsconfig/browser.json"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "node esbuild",
    "deploy": "npm publish",
    "lint": "eslint --fix",
    "format": "prettier --write . --ignore-path .gitignore",
    "test": "yarn lint",
    "prepare": "husky"
  },
  "dependencies": {
    "@tsconfig/node22": "^22.0.5",
    "@typescript-eslint/parser": "^8.53.1",
    "dotenv": "^17.2.3",

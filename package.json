    "tsup": "^8.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "esbuild": "^0.25.2",
    "esbuild-plugin-copy": "^2.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1"
  }
}

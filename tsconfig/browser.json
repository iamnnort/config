{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",

    "module": "ES2022",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,

    "paths": {
      "@src/*": ["src/*"]
    },
    "rootDirs": [".", "./.react-router/types"],

    "types": ["node", "vite/client"],
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,

    "noEmit": true
  }
}
